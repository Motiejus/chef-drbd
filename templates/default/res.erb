# Generated by Chef for <%= node[:fqdn] %>

resource <%= @resource %> {
  device    <%= @device %>;
  disk      <%= @disk %>;
  meta-disk internal;
  on <%= node.name.split('.')[0] %> {
    address <%= @local_ip %>:<%= @local_port %>;
  }
  on <%= @remote_host.split('.')[0] %> {
    address <%= @remote_ip %>:<%= @remote_port %>;
  }
}
